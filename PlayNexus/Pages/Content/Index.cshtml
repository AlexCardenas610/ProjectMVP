@page
@model PlayNexus.Pages.Content.IndexModel
@{
    ViewData["Title"] = "Highlights";
}

<div class="container mt-5">
    <h1 class="mb-4">Community Highlights</h1>
    <div class="row">
        @if (Model.Highlights != null && Model.Highlights.Any())
        {
            foreach (var clip in Model.Highlights)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <video class="card-img-top" controls style="max-height: 250px; object-fit: cover;">
                            <source src="@clip.FileName" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        <div class="card-body">
                            <h5 class="card-title">@clip.Title</h5>
                            <p class="card-text">@clip.Description</p>
                            <p class="card-text"><small class="text-muted">Uploaded by @clip.UserName on @clip.CreatedAt.ToShortDateString()</small></p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-muted">No clips have been uploaded yet. Be the first to share your highlight!</p>
            </div>
        }
    </div>
</div>

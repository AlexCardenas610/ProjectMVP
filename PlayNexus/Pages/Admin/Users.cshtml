@page
@model PlayNexus.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Registered On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users) {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            </tr>
        }
    </tbody>
</table>
